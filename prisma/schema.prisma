generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  // Hardcoded for local dev due to Prisma CLI env loading issue
  url      = "postgresql://spacescanx:password123@127.0.0.1:5433/spacescanx?sslmode=disable"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}
